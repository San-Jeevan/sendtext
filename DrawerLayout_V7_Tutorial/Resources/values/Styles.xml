<?xml version="1.0" encoding="UTF-8" ?>
<resources>

	<style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">#2196F3</item>
		<item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
	</style>

	<style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">#F5F5F5</item>
		<item name="spinBars">true</item>
	</style>

  <style name="BtnStyleBlue" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textColor">#FFFFFF</item>
    <item name="colorButtonNormal">#0095ff</item>
  </style>
  
  
  <style name="BtnStylePink" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">#FF4081</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>


  <style name="BtnStyleGreen" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">#4CAF50</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>



  <style name="BtnStyleFlatBlue" parent="Theme.AppCompat.Light">
    <item name="colorControlHighlight">#0095ff</item>
    <item name="android:textColor">#FFFFFF</item>
    
  </style>
  
  <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
    
    <item name="android:textColor">#FFFFFF</item>
  </style>
  
</resources>

